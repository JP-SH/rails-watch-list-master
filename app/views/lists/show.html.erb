
<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
<% movie = bookmark.movie %>
  <div class="col-md-4">
  <div class="card" style="width: 18rem;" >
    <div id="<%= dom_id movie %>" class="card-body">
      <p class="card-title">
        <strong><%= movie.title %></strong>
      </p>
      <img src=<%= movie.poster_url%> class="img-fluid" alt="movie poster">
      <p class="card-text">
        <%= movie.overview %>
      </p>
      <p>
        <i class="fa-regular fa-star"></i><%= movie.rating %>
      </p>

      <p>
      <i class="fa-regular fa-comment"></i><%= bookmark.comment %>
      </p>
    </div>
  </div>
  </div>
<% end  %>

<%= link_to "Back to Lists", lists_path %>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
